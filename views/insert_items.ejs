   <body>
		<div style="background-image: url('http://www.pngmagic.com/product_images/eCommerce-website-banner-background.jpg'" class="jumbotron my-auto text-center">

				<button class="btn btn-primary" onclick="open_admin()">Login As Admin</button>
				<button class="btn btn-primary" onclick="open_buyer()">Login As Buyer</button>
		</div>
		<div class="jumbotron">
			<div class="container">
				<h2 class="text-center">Add new items in the product list</h2>
				<form class="form-horizontal" action = "/insert_item" method = "GET">
					<div class="form-group">
					<label class="control-label col-sm-2" for="item_name">Name:</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="item_name" placeholder="Enter Item Name" name="item_name" required="required">
					</div>
					</div>

					<div class="form-group">
					<label class="control-label col-sm-2" for="item_price">Price:</label>
					<div class="col-sm-10">
						<input type="number" class="form-control" id="item_price" placeholder="Enter Price" name="item_price" step='0.01' required="required">
					</div>
					</div>

					<div class="form-group">
						<label class="control-label col-sm-2" for="item_quantity">Quantity:</label>
						<div class="col-sm-10">
							<input type="number" class="form-control" id="item_quantity" min="1" placeholder="Enter Quantity" name="item_quantity" required="required">
						</div>
					</div>


					<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
					</div>
				</form>
			</div>
		</div>




