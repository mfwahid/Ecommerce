			<th>Price</th>
			<th>Quantity</th>
			<th>Delete?</th>
		</tr>
		<% if(data.length){
			for(var i = 0;i < data.length;i++) { %>
		<tr>
			<!-- <td><%=(i+1)%></td> -->
